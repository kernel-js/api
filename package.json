{
  "name": "@kernel-js/api",
  "version": "0.4.17",
  "description": "Package to easily develop REST API following JSON API specification.",
  "main": "./dist/index.js",
  "module": "./es6/index.js",
  "type": "module",
  "scripts": {
    "serve": "tsc -w",
    "test": "mocha -r ts-node/register test/**/*",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kernel-js/api.git"
  },
  "author": "Carlos Henrique Escouto <carloshenriqueescouto@gmail.com>",
  "contributors": [
    "Gus <gus@brid-it.com>",
    "Bruno Santos <bruno.dos1997@gmail.com>"
  ],
  "keywords": [
    "kernel",
    "kernel-framework",
    "orm",
    "jsonAPI",
    "request",
    "requests",
    "API"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kernel-js/api/issues"
  },
  "homepage": "https://github.com/kernel-js/api#readme",
  "dependencies": {
    "@kernel-js/exceptions": "^1.0.4",
    "@kernel-js/serializer": "^1.0.1",
    "axios": "^0.21.1",
    "lodash": "^4.17.20"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@types/lodash": "^4.14.161",
    "@types/mocha": "^5.2.7",
    "babel-polyfill": "^6.26.0",
    "chai": "^4.1.2",
    "chai-http": "^4.3.0",
    "cross-env": "^5.2.1",
    "mocha": "^8.1.3",
    "rimraf": "^2.7.1",
    "ts-node": "^8.10.2",
    "tslint": "^5.20.1",
    "typescript": "^4.3.5"
  }
}
